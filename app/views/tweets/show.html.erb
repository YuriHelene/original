<%# 投稿詳細ページ %>
<%= stylesheet_link_tag 'show', :media => "all" %>

<%# <% if user_signed_in? %>
  <%# <%= link_to "マイページへ", user_path(current_user.id) %> 
<%# <% end %>

<h2>投稿詳細</h2>
<div class="tweet">
  <div class="tweetshow">
    <div class="image">
      <%= link_to @tweet.user.name, user_path(@tweet.user.id) %> <%# @tweet?%>
<%# <% @tweet.tags.each do |tag| %>
    <%# <span><%= tag.name</span>  %>
<%# <% end %> 
      <% if @tweet.image.attached? %>
        <%= image_tag @tweet.image.variant(resize_to_limit: [250, 200]), size: '250x200' %>
      <% end %>
    </div>  
    <div class="tweetbody">
      <h2><%= @tweet.title %></h2>
      <p><%= simple_format(@tweet.body) %></p>
    </div>
  </div>

  <p>投稿日時<%= @tweet.created_at.strftime('%Y/%m/%d %H:%M:%S') %></p>
<% if @tweet.created_at != @tweet.updated_at %>
  <p>更新日時<%= @tweet.updated_at.strftime('%Y/%m/%d %H:%M:%S') %></p>
<% end %>

<% @tweet_hashtags.each do |hashtag| %>
  <%# <% if hashtag.tweets.size > 0 %> 
  <% tweet_count = hashtag.tweets.size %>
  <% if tweet_count > 0 %>
    <%= link_to hashtag.hashtag_name, hashtag_tweets_path(hashtag_id: hashtag.id) %>
    <%# <%= "(#{hashtag.tweets.count})" %>
    <%= "(#{tweet_count})" %>
  <% end %>
<% end %>


<% if user_signed_in? && current_user.id == @tweet.user_id %>
  <%= link_to edit_tweet_path(@tweet.id) do%>
    <i class="fa-solid fa-pencil"></i>編集
  <% end %>  
  <%= button_to tweet_path(@tweet), method: :delete, data: { confirm: "本当に削除しますか？", turbo: false} do %>
    <i class="fa-solid fa-trash"></i> 削除
  <% end %>
<% end %>

<div class="userlike-comment">
  <% if user_signed_in? %>
      <% if current_user.already_liked?(@tweet) %>
        <%= button_to tweet_like_path(@tweet), method: :delete do %>
          <%# <p>いいねを取り消す %>
          </p><%= @tweet.likes.count %>
        <%= image_tag asset_path('heart_likes.png'), class: 'heart_likes' %>
      <% end %>
      <% else %>
        <%= button_to tweet_likes_path(@tweet), method: :post do %>
        <%= image_tag asset_path('heart_pre.png'), class: 'heart_likes' %>
        <%# <p>いいね</p> %>
        <%= @tweet.likes.count %>
        <% end %>
      <% end %>
    <% else %>
      <%# <p>いいねの数 = </p> %>
      <%= @tweet.likes.count %>
    <% end %>

<% if user_signed_in? %>
    <%= form_with(model: [@tweet, @comment], local: true) do |f| %>
      <%= f.text_area :content %>
      <%= button_tag type: "submit" do %>
        <i class="far fa-comments"></i> コメントする
      <% end %>
    <% end %>
  <% end %>
</div>

<div class="showlike-comment">
  <div class="likeuser">
      <h4>いいねしたユーザー</h4>
      <% @tweet.liked_users.each do |user| %>
        <li><%= user.name %></li>
      <% end %>
  </div>    

  <div class="comment-wrapper">
    <h4>コメント一覧</h4>
    <% @comments.each do |c| %>
      <div>
        <%= link_to @tweet.user.name, user_path(@tweet.user.id) %> 
        <%# <%= c.user.name unless c.user.blank? %> 
        <br>
        <%= c.content %>
      </div>
        <br>
    <% end %>
  </div>
</div>  

