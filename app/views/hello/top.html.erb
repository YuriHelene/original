<%= link_to "ログイン", tweets_path %>
<%= link_to "新規登録", new_user_registration_path %>
<%= link_to '投稿一覧ページへ', :controller => "tweets", :action => "index" %>
<%= link_to '投稿ページへ', :controller => "tweets", :action => "new" %>

<div class="square">
  <h3 class="text-center">新着投稿</h3>
</div>
  
<div class="container mt-3">
  <div class="row">
    <% @new_tweets.each do |tweet| %>
      <div class="card-body">
      <h6 class="list-group-item"><%= tweet.created_at.strftime('%Y/%m/%d %H時%M分') %></h6>
      <h6 class="list-group-item"><%= tweet.body.truncate(100) %></h6>
      <h6 class="list-group-item"><%= link_to"投稿一覧へ",tweets_path %></h6>
      </div>
    <% end %>
  </div>
</div>